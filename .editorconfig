root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.bats]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.go]
indent_style = tab
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2

[{Bakefile,Makefile}]
indent_style = tab
